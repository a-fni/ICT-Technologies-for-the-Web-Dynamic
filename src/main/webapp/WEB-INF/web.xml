<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
  <display-name>TIWProjec</display-name>

  <!-- Home page html -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>style.css</welcome-file>
    <welcome-file>index.js</welcome-file>
  </welcome-file-list>

  <!-- Database connection information -->
  <display-name>TIWProject</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/tiw</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>astar@[7)fulcrum</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>

  <!-- Login checking login & servlet login filtering -->
  <filter>
    <filter-name>LoginChecker</filter-name>
    <filter-class>it.group117.filters.LoginChecker</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LoginChecker</filter-name>
    <url-pattern>/home.html</url-pattern>
    <url-pattern>/categories</url-pattern>
    <url-pattern>/createCategory</url-pattern>
    <url-pattern>/renameCategory</url-pattern>
    <url-pattern>/doCopy</url-pattern>
  </filter-mapping>

</web-app>
